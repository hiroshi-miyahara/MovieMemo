<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieMain" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stat_title"
        android:layout_above="@+id/stat_close" >

        <LinearLayout
            android:id="@+id/stat_table_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            android:orientation="vertical" >

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/stat_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/stat_txt_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="24sp"
            android:text="@string/stat_txt_count"
            android:padding="8.0px" />

        <Spinner
            android:id="@+id/stat_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/stat_types"
            android:padding="8.0px" />

    </LinearLayout>

    <Button
        android:id="@+id/stat_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_close"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
